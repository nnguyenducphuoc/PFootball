<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/mp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="MP"
        android:textAlignment="center"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/win"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="W"
        android:textAlignment="center"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/draw"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="D"
        android:textAlignment="center"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/lost"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="L"
        android:textAlignment="center"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/pts"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="Pts"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/gf"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="GF"
        android:textAlignment="center"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/ga"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="GA"
        android:textAlignment="center"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/gd"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="GD"
        android:textAlignment="center"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/last"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="Last 5"
        android:textAlignment="center"
        android:textColor="@color/black"></TextView>

</LinearLayout>